<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="ZendeskSdkTheme.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/RedActionBar</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textAppearance">@style/grey_text</item>
    </style>

    <style name="ZopimChatTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="grey_text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_text</item>
    </style>

    <style name="RedActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:backgroundStacked">@color/colorSecondary</item>
    </style>

</resources>
